<div class="row">
  <div class="col s12">
    <!--      <h4>Create Payment</h4>-->
    <%= form_with(model: pay, local: true) do |form| %>
      <% if pay.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(pay.errors.count, "error") %> prohibited this Outgoing Payment from being saved:</h2>

          <ul>
            <% pay.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label(:destination, "Destination:") %>
        <%= form.text_field(:destination) %>
      </div>

      <br>

      <div>
        <%= form.select(:currency, options_for_select([ ['Kenyan Shilling', 'KES'], ['Ugandan Shilling', 'USH'], ['Tanzanian Shilling', 'TSH'], ]), { :prompt =>"CURRENCY" }, {:class => 'browser-default'}) %>
      </div>

      <br>

      <div>
        <%= form.label(:value, "Amount:") %>
        <%= form.text_field(:value) %>
      </div>

      <br>

      <div class="actions">
        <%= form.submit(data: { disable_with: "Creating Outgoing Payment Object." }, class: "button btn btn-primary btn-lg") %>
      </div>

    <% end %>
  </div>
</div>
