<h1>New Till Recipient</h1>

<div class="row">
  <div id="till" class="col s12 recipient_content">
    <!--      <h4>Till</h4>-->
    <%= form_with(model: @pay_recipient, local: true) do |form| %>
      <% if @pay_recipient.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@pay_recipient.errors.count, "error") %> prohibited this Till Recipient from being saved:</h2>

          <ul>
            <% @pay_recipient.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form.hidden_field(:recipient_type, value: "till") %>
      <p><%= label_tag(:till_details, "Till Details:") %></p>

      <div>
        <%= form.label(:account_name, "Till Name:") %>
        <%= form.text_field(:account_name) %>
      </div>

      <div>
        <%= form.label(:account_number, "Till Number:") %>
        <%= form.text_field(:account_number) %>
      </div>

      <br>

      <div class="actions">
        <%= form.submit(data: { disable_with: "Creating PAY Object." }, class: "button btn btn-primary btn-lg") %>
      </div>

    <% end %>
  </div>
</div>

<br>

<%= link_to 'Back', payments_pay_recipients_path, class: "waves-effect waves-light btn"%>
