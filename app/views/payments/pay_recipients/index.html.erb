<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h3>Pay Recipients</h3>

<div class="webhooks">
  <div id="pay_recipients" class="pay_recipients">
    <table>
      <thead>
      <tr>
        <th>Account Name</th>
        <th>Account Identifier</th>
        <th>Location URL</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @pay_recipients.each do |pay_recipient| %>
        <tr>
          <td><%= pay_recipient.recipient_name %></td>
          <td><%= pay_recipient.account_identifier %></td>
          <td><%= pay_recipient.location_url %></td>
          <td><%= link_to 'remove_red_eye', pay_recipient, class: 'material-icons' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

